{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "../dist-tool",
        "declaration": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "CommonJs",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}